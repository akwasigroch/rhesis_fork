apiVersion: v1
kind: Secret
metadata:
  name: rhesis-secrets
  namespace: rhesis
type: Opaque
data:
  # Database Passwords
  # Replace with your actual database passwords (base64 encoded)
  SQLALCHEMY_DB_PASS: <BASE64_ENCODED_DATABASE_PASSWORD>
  
  # Redis Password
  # Replace with your actual Redis password (base64 encoded)
  REDIS_PASSWORD: <BASE64_ENCODED_REDIS_PASSWORD>
  
  # Auth0 Configuration
  # Replace with your actual Auth0 configuration (base64 encoded)
  AUTH0_DOMAIN: <BASE64_ENCODED_AUTH0_DOMAIN>
  AUTH0_AUDIENCE: <BASE64_ENCODED_AUTH0_AUDIENCE>
  AUTH0_CLIENT_ID: <BASE64_ENCODED_AUTH0_CLIENT_ID>
  AUTH0_CLIENT_SECRET: <BASE64_ENCODED_AUTH0_CLIENT_SECRET>
  AUTH0_SECRET_KEY: <BASE64_ENCODED_AUTH0_SECRET_KEY>
  
  # JWT Configuration
  # Replace with your actual JWT secret key (base64 encoded)
  JWT_SECRET_KEY: <BASE64_ENCODED_JWT_SECRET_KEY>
  
  # AI Model API Keys
  # Replace with your actual API keys (base64 encoded)
  AZURE_OPENAI_API_KEY: <BASE64_ENCODED_AZURE_OPENAI_API_KEY>
  OPENAI_API_KEY: <BASE64_ENCODED_OPENAI_API_KEY>
  GEMINI_API_KEY: <BASE64_ENCODED_GEMINI_API_KEY>
  GOOGLE_API_KEY: <BASE64_ENCODED_GOOGLE_API_KEY>
  
  # SMTP Configuration
  # Replace with your actual SMTP configuration (base64 encoded)
  SMTP_HOST: <BASE64_ENCODED_SMTP_HOST>
  SMTP_USER: <BASE64_ENCODED_SMTP_USER>
  SMTP_PASSWORD: <BASE64_ENCODED_SMTP_PASSWORD>
  FROM_EMAIL: <BASE64_ENCODED_FROM_EMAIL>
  
  # Frontend Authentication
  # Replace with your actual frontend auth configuration (base64 encoded)
  NEXTAUTH_SECRET: <BASE64_ENCODED_NEXTAUTH_SECRET>
  GOOGLE_CLIENT_ID: <BASE64_ENCODED_GOOGLE_CLIENT_ID>
  GOOGLE_CLIENT_SECRET: <BASE64_ENCODED_GOOGLE_CLIENT_SECRET>
  
  # Rhesis Configuration
  # Replace with your actual Rhesis configuration (base64 encoded)
  RHESIS_API_KEY: <BASE64_ENCODED_RHESIS_API_KEY>
  WORKER_API_URL: <BASE64_ENCODED_WORKER_API_URL>

---
# Instructions for creating rhesis-secrets.yaml:
#
# 1. Copy this file to rhesis-secrets.yaml
# 2. Replace all placeholder values with your actual values
# 3. Encode all values using base64:
#    echo -n "your-actual-value" | base64
#
# Example:
#   echo -n "my-database-password" | base64
#   # Output: bXktZGF0YWJhc2UtcGFzc3dvcmQ=
#
# 4. Replace the placeholder with the base64 encoded value:
#   POSTGRES_PASSWORD: bXktZGF0YWJhc2UtcGFzc3dvcmQ=
#
# 5. Apply the secret to your Kubernetes cluster:
#   kubectl apply -f rhesis-secrets.yaml
#
# Note: Never commit the actual rhesis-secrets.yaml file to version control!
# Add it to your .gitignore file.
