{
    "python.envFile": "",
    "editor.rulers": [
        100
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "files.exclude": {
        "**/.venv": true,
        "**/.pytest_cache": true,
        "**/_pycache_": true,
        "**/__pycache__": true,
        "**/.ruff_cache": true,
        "**/.deepeval": true,
    },
    "python.testing.pytestArgs": [
        "--ignore=tests/backend",
        "--ignore=tests/sdk/services",
        "--ignore=tests/sdk/test_behavior.py",
        "--ignore=tests/sdk/test_topic.py",
        "--ignore=tests/sdk/synthesizers",
        "--ignore=sdk",
        "--ignore=apps/"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}